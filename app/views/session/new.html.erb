<div class="login">
  <div class="container">
    <h1>Login</h1>
    <%= form_for @user, :id => "login_form", :url => create_session_path, :method => "post" do |f|%>
        <div class="form-group">
          <%= text_field "user", "email", "placeholder" => "Email", "class" => "form-control col-md-6" %>
        </div>
        <div class="form-group">
          <%= password_field "user", "password", "placeholder" => "Password", "class" => "form-control col-md-6" %>
        </div>
        <%= submit_tag :Login, :id => "btn_login", :class => "btn btn-primary" %>
    <% end -%>
  </div>
</div>